  .swiper.slider-js
    .swiper-wrapper
      each item,index in [{"title":"Find & book <br> shows around you","desc":"Updated catalog of concerts, live perfomances taking place in your locality."},{"title":"Experience the <br> colourful night sky","desc":"Updated catalog of concerts, live perfomances taking place in your locality."},{"title":"Workspace that <br> looks after you","desc":"Updated catalog of concerts, live perfomances taking place in your locality."}]
