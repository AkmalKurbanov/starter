              .slider__desktop(style=`background-image: url('images/dist/desktop-slide${(index + 1)}.webp`)
              .slider__mobile(style=`background-image: url('images/dist/mobile-slide${(index + 1)}.webp`)
              
              .slider__item-bottom
                .slider__title!=item.title
                .slider__desc!=item.desc

                

              



